{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenWrt Builder",
  "version": "0.1.0",
  "identifier": "com.imciel.openwrt.builder",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenWrt Builder",
        "width": 1200,
        "height": 1200,
        "minWidth": 1000,
        "minHeight": 800,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../build.sh",
      "../../run.sh",
      "../../run.ps1",
      "../../setup",
      "../../modules"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "dialogImagePath": null,
        "bannerPath": null
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["English", "SimpChinese"]
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": [
          "docker.io"
        ],
        "section": "utils",
        "priority": "optional",
        "files": {
          "/usr/share/applications/openwrt-builder.desktop": "../../assets/openwrt-builder.desktop",
          "/usr/share/pixmaps/openwrt-builder.png": "icons/128x128.png"
        }
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {}
}